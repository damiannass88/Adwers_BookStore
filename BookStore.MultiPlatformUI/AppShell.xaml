<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookStore.MultiPlatformUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookStore.MultiPlatformUI"
    xmlns:views="clr-namespace:BookStore.MultiPlatformUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="BookStore.MultiPlatformUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Title="Books" ContentTemplate="{DataTemplate views:BooksPage}" />
    
</Shell>
